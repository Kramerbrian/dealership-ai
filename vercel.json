{
  "version": 2,
  "builds": [
    {
      "src": "apps/web/package.json",
      "use": "@vercel/next",
      "config": {
        "distDir": ".next"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "apps/web/$1"
    }
  ],
  "functions": {
    "apps/web/app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "env": {
    "NODE_ENV": "production",
    "LOG_LEVEL": "info"
  },
  "build": {
    "env": {
      "NEXT_TELEMETRY_DISABLED": "1"
    }
  },
  "regions": ["iad1"],
  "framework": "nextjs",
  "crons": [
    {
      "path": "/api/cron/enterprise-analytics",
      "schedule": "0 6 * * *",
      "description": "Daily enterprise analytics aggregation for 5000+ dealerships"
    },
    {
      "path": "/api/cron/bulk-refresh",
      "schedule": "0 10 * * *",
      "description": "Morning bulk refresh for high-priority dealerships"
    },
    {
      "path": "/api/cron/competitive-scan",
      "schedule": "0 14 * * MON",
      "description": "Weekly competitive intelligence scan across all markets"
    },
    {
      "path": "/api/cron/cache-optimization",
      "schedule": "0 2 * * *",
      "description": "Overnight cache cleanup and optimization"
    },
    {
      "path": "/api/cron/market-trends",
      "schedule": "0 18 * * FRI",
      "description": "Weekly market trends analysis for geographic clusters"
    }
  ]
}